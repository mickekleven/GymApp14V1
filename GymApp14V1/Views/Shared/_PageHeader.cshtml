@model GymApp14V1.Core.ViewModels.PageHeaderViewModel


@if (Model is not null) {
    <div class="row text-light bgcolor-blue">
        @if (!string.IsNullOrWhiteSpace(Model.HeadLine))
        {
            <div class="col-md-12">
                <h1 class="display-1 fw-bold">@Model.HeadLine</h1>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.SubTitle))
        {
            <div class="col-md-12">
                <h1 class="display-6">@Model.SubTitle</h1>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Content))
        {
            <div class="col-md-12">
                <p>@Model.Content</p>
            </div>
        }
    </div>
}







