@model GymApp14V1.Core.ViewModels.BookingViewModel


@if (Model.PageHeader is not null)
{
    <partial name="_PageHeader" model="Model.PageHeader"></partial>
}


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GymClass.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GymClass.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GymClass.StartTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GymClass.StartTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GymClass.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GymClass.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GymClass.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GymClass.Description)
        </dd>
    </dl>
</div>


<div class="row">
    <div class="col-md-4">
        <form asp-controller="GymClass" asp-action="Booking">
            <div class="form-group">
                <input asp-for="GymClass.Id" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input type="submit" value="@(Model.IsAttending ? "CANCEL" : "BOOK")" class="btn @(Model.IsAttending ? "btn-danger" : "btn-primary")" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
